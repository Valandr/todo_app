<h1>Todo App : Welcome</h1>

<% @todos.each do |todo| %>
    <h2><%= link_to todo.title, todo_path(todo.id) %></h2>
    <li>
        <%= todo.description %>
        <%= link_to "edit", edit_todo_path(todo[:id]) %>
        <%= link_to "delete", todo, method: :delete, data: {confirm: "You sure?"} %>
    </li>
<% end %><br><br>

<%= link_to "New Todo Item", new_todo_path %>